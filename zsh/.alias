alias s="source ${XDG_CONFIG_HOME:-$HOME}/zsh/.zshrc"

alias v="nvim"
alias vi="nvim"
alias vim="nvim"

alias ll="ls -alF"
alias la="ls -A"
alias l="ls -CF"

alias f="find . -name"

alias gs="git status"
