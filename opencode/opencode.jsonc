{
	"$schema": "https://opencode.ai/config.json",
	"theme": "system",
	"instructions": [
		"~/.config/opencode/doc/coding_style.md",
		"~/.config/opencode/doc/coding_workflow.md"
	],
	"mcp": {
		"fetch": {
			"type": "local",
			"enabled": true,
			"command": [ 
				"docker",
				"run",
				"-i",
				"--rm",
				"mcp/fetch"
			]
		},
		"context7": {
			"type": "local",
			"enabled": true,
			"command": [
				"pnpm",
				"dlx",
				"@upstash/context7-mcp",
				"--api-key",
				"$CONTEXT7_API_KEY"
			]
		},
		"filesystem": {
			"type": "local",
			"enabled": true,
			"command": [
				"pnpm",
				"dlx",
				"@modelcontextprotocol/server-filesystem",
				"/Users/geometriccross/ghq/github.com/geometriccross"
			]
		}
	},
	"agent": {
		"plan": {
			"disable": true
		},
		"build": {
			"disable": true
		},
		"explore": {
			"disable": true
		}
	},
	"watcher": {
		"ignore": ["prompts/**", "sandbox/**", "sandbox.md"]
	},
	"plugin": ["opencode-beads", "opencode-gemini-auth@latest"]
}
