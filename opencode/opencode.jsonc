{
	"$schema": "https://opencode.ai/config.json",
	"theme": "system",
	"mcp": {
		"fetch": {
			"type": "local",
			"enabled": true,
			"command": [ 
				"docker",
				"run",
				"-i",
				"--rm",
				"mcp/fetch"
			]
		},
		"context7": {
			"type": "local",
			"enabled": true,
			"command": [
				"pnpm",
				"dlx",
				"@upstash/context7-mcp",
				"--api-key",
				"$CONTEXT7_API_KEY"
			]
		},
		"filesystem": {
			"type": "local",
			"enabled": true,
			"command": [
				"pnpm",
				"dlx",
				"@modelcontextprotocol/server-filesystem",
				"/Users/geometriccross/ghq/github.com/geometriccross"
			]
		}
	},
	"agent": {
		"build": {
			"disable": true
		}
	},
	"plugin": ["opencode-beads", "opencode-gemini-auth@latest"]
}
