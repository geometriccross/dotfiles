{
	"$schema": "https://opencode.ai/config.json",
	"theme": "system",
	"mcp": {
		"fetch": {
			"type": "local",
			"enabled": true,
			"command": [ 
				"docker",
				"run",
				"-i",
				"--rm",
				"mcp/fetch"
			]
		},
		"context7": {
			"type": "local",
			"enabled": true,
			"command": [
				"docker",
				"run",
				"-i",
				"--rm",
				"mcp/context7"
			]
		},
		"filesystem": {
			"type": "local",
			"enabled": true,
			"command": [
				"docker",
				"run",
				"-i",
				"--rm",
				"-v",
				"$(pwd):/target",
				"mcp/filesystem",
				"/target"
			]
		}
	},
	"agent": {
		"plan": {
			"disable": true
		},
		"build": {
			"disable": true
		}
	},
	"plugin": ["opencode-beads"]
}
