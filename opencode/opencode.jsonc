{
	"$schema": "https://opencode.ai/config.json",
	"mcp": {
		"fetch": {
			"type": "local",
			"enabled": true,
			"command": [ 
				"docker",
				"run",
				"-i",
				"--rm",
				"mcp/fetch"
			]
		},
		"context7": {
			"type": "local",
			"enabled": true,
			"command": [
				"docker",
				"run",
				"-i",
				"--rm",
				"mcp/context7"
			]
		},
		"serena": {
			"type": "local",
			"enabled": true,
			"command": [
				"uvx",
				"--from",
				"git+https://github.com/oraios/serena",
				"serena",
				"start-mcp-server",
				"--project $(pwd)"
			]
		}
	},
	"agent": {
		"plan": {
			"disable": true
		},
		"build": {
			"disable": true
		}
	},
	"lsp": false,
	"formatter": false
}
